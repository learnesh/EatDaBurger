<div class="container">
    <div class="jumbotron">
        <img id="burger-image" src="https://ih1.redbubble.net/image.193405056.7420/flat,800x800,070,f.u1.jpg">
        <h1 id="jumbotron-text">Enter a burger you want to eat!</h1>
    </div>

    <div id="messages"></div>

<div class="form-container">

    <form class="create-form" method="POST" action="/api/burgers">

        <div id="newBurger"></div>

        <div class="form-group" id="addform">
            <label for="ca" class="text add-text">Enter a burger you'd like to eat</label>
            <br>
            <br>
            <div class="input-container">
            <textarea type="text" id="burgerInput" name="burger_name" size="100" placeholder="Which burger is your favorite?"></textarea>

        <br><br>
        
        <div class="submit-container">
        <button type="submit" class="text submit-text" id="addburger">Submit Burger</button>
        </div>

        <br>

        <div class="instruction-container">
        <h5 class="text instruction-text">Enter a burger you want to have, Then Click the "Submit" Button</h5>
        </div>
        
        </div>
    </form>
</div>

<br><br>

    <div class="col-xs-6" id="left">
			<div class="panel">

    <h2 class="h2text text" id="notDevoured">Burgers to Devour</h2>
    <hr class="h2hr">

    <ul>
    {{#each burgersData}} 
        {{#unless this.devoured}}

        <p class="body-text">Name: <br> {{this.burger_name}}</p> 

        {{!-- <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST"> --}}
            {{!--
            <input type="hidden" name="devoured" value="false"> --}}

            <button type="submit" class="devourburger" data-id="{{this.id}}" name="devoured" value="true">DEVOUR IT!</button>

        {{!-- </form> --}}

        {{/unless}}   
    {{/each}}
    </ul>
</div>
</div>


<div class="col-xs-6" id="left">
			<div class="panel">
    <h2 class="h2text text" id="burgerDevoured">Devour It!</h2>
    <hr class="h2hr">


    <ul>
        {{#each burgersData}} 
        {{#if this.devoured}}

        <p class="body-text">Name: <br> {{this.burger_name}}</p>

        {{> burgers/delete-burger}}

        </form>
        {{/if}} 
        {{/each}}
    </ul>

    </div>
